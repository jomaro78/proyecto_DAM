<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Esdeveniments" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="buttonStyle">@style/CustomButton</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorOnSurface">@color/colorOnBackground</item>
    </style>

    <style name="Theme.Esdeveniments" parent="Base.Theme.Esdeveniments" />

    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Estilos para tarjetas de eventos -->
    <style name="EventCard.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="EventCard.Date" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="EventCard.Location" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>